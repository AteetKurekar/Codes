int main(){
	
	int space=4;
	int number;
	//printf("%c",alphabet);
	for(int i=1;i<=5;i++){
		for(int k=1;k<=space;k++)
			printf(" ");
//		for(int j=1;j<=(2*i-1);j++){
//			printf("*");
//		}
		number=i;
		for(int j=1;j<=i;j++){
			//printf("*");
			printf("%d",number);
			++number;
		}
		number=i;
		for(int j=1;j<i;j++){
			printf("%d",number);
			//printf("*");
			++number;
		}
		for(int k=1;k<=space;k++)
			printf(" ");
		space--;
		printf("\n");
	}
