int main(){
	int space=4;
	for(int i=1;i<=5;i++){
		for(int k=1;k<=space;k++)
			printf(" ");
		for(int j=1;j<=(2*i-1);j++){
			printf("*");
		}
		for(int k=1;k<=space;k++)
			printf(" ");
		space--;
		printf("\n");
	}
}
