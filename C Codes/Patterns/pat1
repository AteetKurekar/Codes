int main(){
	
	int space=0;

	for(int i=5;i>=1;i--){
		for(int k=1;k<=space;k++)
			printf(" ");

		for(int j=1;j<=i;j++){
			printf("*");
		}
		
		for(int j=1;j<i;j++){
			printf("*");
		}
		for(int k=1;k<=space;k++)
			printf(" ");
		space++;
		printf("\n");
	}
================================================================================================================================================
